<?xml version="1.0" encoding="UTF-8" ?>
<orangery xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://www.example.com/orangery"
          xsi:schemaLocation="http://www.example.com/orangery orangery.xsd">


    <plant id="p01">
        <name>tulip</name>
        <visual-parameters>
            <length>20</length>
            <floral-parts>1</floral-parts>
            <color>yellow</color>
        </visual-parameters>
    </plant>

    <plant id="p02">
        <name>chamomile</name>
        <visual-parameters>
            <length>15</length>
            <floral-parts>7</floral-parts>
            <color>blue</color>
        </visual-parameters>
    </plant>

    <rosacea id="r01" thorns="true">
        <name>rose</name>
        <visual-parameters>
            <length>50</length>
            <floral-parts>5</floral-parts>
            <color>red</color>
        </visual-parameters>
    </rosacea>

    <rosacea id="r02">
        <name>spirea</name>
        <visual-parameters>
            <length>150</length>
            <floral-parts>7</floral-parts>
            <color>white</color>
        </visual-parameters>
    </rosacea>

</orangery>